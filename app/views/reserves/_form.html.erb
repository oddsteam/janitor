<%= form_with(model: reserve, class: "contents") do |form| %>
  <% if reserve.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(reserve.errors.count, "error") %> prohibited this reserve from being saved:</h2>

      <ul>
        <% reserve.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
    <%= form.label :start_timer, class: "block mb-2 font-medium text-gray-700" %>
    <%= form.select :start_timer, 
        options_for_select((8..20).map { |hour| 
          (0..1).map { |mins| 
            time = Time.new(2000, 1, 1, hour, mins*30)
            [time.strftime("%I:%M %p"), time.strftime("%H:%M")]
          }
        }.flatten(1)),
        { include_blank: "Select Start Time" },
        { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" }
    %>
  </div>

  <div class="my-5">
    <%= form.label :end_timer, class: "block mb-2 font-medium text-gray-700" %>
    <%= form.select :end_timer, 
        options_for_select((8..20).map { |hour| 
          (0..1).map { |mins| 
            time = Time.new(2000, 1, 1, hour, mins*30)
            [time.strftime("%I:%M %p"), time.strftime("%H:%M")]
          }
        }.flatten(1)),
        { include_blank: "Select End Time" },
        { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" }
    %>
  </div>
  <div class="my-5">
    <%= form.label :note %>
    <%= form.text_field :note, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

    <div class="my-5">
    <%= form.label :room_id %>
    <%= form.text_field :room_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
  
<% end %>
